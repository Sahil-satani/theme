 {% if settings.timber_enable %}

 <div class="timer"> 

   <div class="timer-display"> 

     <div class="timer-block"> 
      <div class="timer-block__num_wrapper">
       <span class="timer-block__num js-timer-days">00</span><span class="timer-block__unit">d</span> 
      </div> 
     </div> 

     <div class="timer-block"> 
       <div class="timer-block__num_wrapper">
       <span class="timer-block__num js-timer-hours">00</span><span class="timer-block__unit">h</span> 
       </div> 
     </div> 

     <div class="timer-block"> 
      <div class="timer-block__num_wrapper">
       <span class="timer-block__num js-timer-minutes">00</span><span class="timer-block__unit">m</span> 
      </div>
     </div> 

     <div class="timer-block last"> 
      <div class="timer-block__num_wrapper">
       <span class="timer-block__num js-timer-seconds">00</span><span class="timer-block__unit">s</span>
      </div>
     </div> 

   <div class="timer_left_text_wrapper">
   <span class="timer_left_text">Left</span>
   </div>
   
   </div> 

 </div> 

 <style> 

   .timer { 
    margin: 28px 0;
   } 

   .timer--expired { 

     display: none; 

   } 

   .timer__title { 

     @extend .paragraph; 

     text-align: center; 

   } 

   .timer-display { 

     display: -webkit-box; 

     display: -ms-flexbox; 

     display: flex; 

     -ms-flex-wrap: wrap; 

         flex-wrap: wrap; 

     -webkit-box-pack: justify; 

         -ms-flex-pack: justify; 

             justify-content: center; 
    align-items: center;

        max-width: 600px;
    margin: 0 auto;
     

   } 

   .timer-block { 

     position: relative; 

     width: 22%; 

     padding: 0 10px; 
   }

     .timer-block:not(:last-child):after { 
    content: ':';
    position: absolute;
    right: -5px;
    top: 45%;
    transform: translateY(-50%);
    font-size: 34px;
     } 

.timer-block.last:after {
  display: none;
}
   
   .timer-block__num, 

   .timer-block__unit { 
    text-align: center;
    font-size: 34px;
    color: #EDE7DF;
   } 

   .timer-block__num_wrapper{
    background: rgba(255, 255, 255, 0.3);
    border-radius: 5px;
         margin: 0px 10px;
    padding: 3px 5px;
   }
   .timer_left_text{
         text-align: center;
    font-size: 24px;
    color: #EDE7DF;
   }

   @media (min-width: 768px) and (max-width: 989px){
   .timer-block__num, .timer-block__unit{
          font-size: 30px; 
   }
     .timer_left_text{
    font-size: 22px;
   }
   }

  @media (max-width: 767px) {
    .timer{
          margin: 15px 0;
    }
    .timer-display{
          max-width: 450px;
    }
    .timer-block__num, .timer-block__unit{
      font-size: 20px;
    }
    .timer-block__num_wrapper{
    margin: 0;
    }
    .timer_left_text{
          font-size: 18px
    }
  }
 </style> 

 <script type="text/javascript"> 

   var second = 1000, 

       minute = second * 60, 

       hour = minute * 60, 

       day = hour * 24; 

   var countDown = new Date('{{ settings.months }} {{ settings.days }}, {{ settings.years }} 21:00:00').getTime(), 

       x = setInterval(function() { 

       var now = new Date().getTime(), 

           distance = countDown - now; 

     document.querySelector('.js-timer-days').innerText = Math.floor(distance / (day)), 

       document.querySelector('.js-timer-hours').innerText = Math.floor((distance % (day)) / (hour)), 

     document.querySelector('.js-timer-minutes').innerText = Math.floor((distance % (hour)) / (minute)), 

     document.querySelector('.js-timer-seconds').innerText = Math.floor((distance % (minute)) / second); 

     }, second) 

 </script> 

   {% endif %}